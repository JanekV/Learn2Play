@model BLL.App.DTO.DomainEntityDTOs.Video

@{
    ViewData["Title"] = "Delete";
}

<h1>@Resources.Domain.Common.Delete</h1>

<h3>@Resources.Domain.Common.ConfirmDelete</h3>
<div>
    <h4>Video</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Resources.Domain.Common.YoutubeUrl
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.YouTubeUrl)
        </dd>
        <dt class = "col-sm-2">
            @Resources.Domain.Common.AuthorChannel
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AuthorChannelLink)
        </dd>
        <dt class = "col-sm-2">
            @Resources.Domain.Common.LocalPath
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LocalPath)
        </dd>
        <dt class = "col-sm-2">
            @Resources.Domain.Common.Song
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Song.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@Resources.Domain.Common.Delete" asp-route-songId="@Model.SongId" class="btn btn-danger" /> |
    </form>
</div>
