@model WebApp.Areas.Admin.ViewModels.SongWithChordViewModel

@{
    ViewData["Title"] = "Add";}
}
<h1>@Resources.Domain.Common.Add</h1>

<h4>@Resources.Domain.Common.Song: @Model.SongName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-area="Admin" asp-action="AddToSong">
            <div class="form-group">
                <label asp-for="@Model.ChordId" class="control-label">@Resources.Domain.Common.Chord</label>
                <select asp-for="@Model.ChordId" class ="form-control" asp-items="Model.ChordSelectList"></select>
            </div>
            <input type="hidden" asp-for="SongId" value="@Model.SongId"/>
            <div class="form-group">
                <input type="submit" value="@Resources.Domain.Common.Create" class="btn btn-primary" />
            </div>
            
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Resources.Domain.Common.BackToList</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}html>