@model BLL.App.DTO.SongWithEverything

@{
    ViewData["Title"] = "Details";
}

<h1>@Resources.Domain.Common.Details</h1>

<div class="container bg-light-gradient">
    <h4>@Resources.Domain.Common.Song</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Resources.Domain.Common.Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SongName)
        </dd>
        <dt class = "col-sm-2">
            @Resources.Domain.Common.Author
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SongAuthor)
        </dd>
        <dt class = "col-sm-2">
            @Resources.Domain.Common.SpotifyLink
        </dt>
        <dd class = "col-sm-10">
            <iframe src="https://open.spotify.com/embed/track/@Model.SpotifyLink"
                    width="280" height="80" frameborder="0" allowtransparency="true"
                    allow="encrypted-media"></iframe>
        </dd>
    </dl>
    <dl class="row">
        <dt class = "col-sm-2">
            @Resources.Domain.Common.Description
        </dt>
        <dd class = "col-lg-7">
            @Html.DisplayFor(model => model.SongDescription)
        </dd>
    </dl>
    <dl class="row">
        <dt class = "col-sm-2">
            @Resources.Domain.Common.SongKey
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SongKey.Description)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Resources.Domain.Common.NavInstruments (<a asp-area="Admin" asp-controller="Instruments" asp-action="AddInstrumentToSong"
                                                        asp-route-songId="@Model.Id">@Resources.Domain.Common.Add</a>)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var instrument in Model.Instruments)
                {
                    <li>@instrument.Name <a asp-area="Admin" asp-action="Edit" asp-controller="Instruments"
                                            asp-route-id="@instrument.Id">@Resources.Domain.Common.Edit</a> / 
                        <a asp-area="Admin" asp-action="Remove" asp-controller="Instruments"
                           asp-route-songId="@Model.Id" asp-route-instrumentId="@instrument.Id">@Resources.Domain.Common.Remove</a></li>
                }
            </ul>
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Resources.Domain.Common.NavStyles (<a asp-area="Admin" asp-controller="Styles"
                                                          asp-action="AddStyleToSong"
                       asp-route-songId="@Model.Id">@Resources.Domain.Common.Add</a>)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var style in Model.Styles)
                {
                    <li>@style.Name <a asp-area="Admin" asp-action="Edit" asp-controller="Styles"
                                       asp-route-id="@style.Id">@Resources.Domain.Common.Edit</a> / 
                        <a asp-area="Admin" asp-action="Remove" asp-controller="Styles"
                           asp-route-songId="@Model.Id" asp-route-styleId="@style.Id">@Resources.Domain.Common.Remove</a></li>
                }
            </ul>
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Resources.Domain.Common.NavChords (<a asp-area="Admin" asp-controller="Chords"
                                                          asp-action="AddChordToSong"
                       asp-route-songId="@Model.Id">@Resources.Domain.Common.Add</a>)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var chord in Model.Chords)
                {
                    <li>@chord.Name <a asp-area="Admin" asp-action="Edit" asp-controller="Chords"
                                       asp-route-id="@chord.Id">@Resources.Domain.Common.Edit</a> / 
                        <a asp-area="Admin" asp-action="Remove" asp-controller="Chords"
                           asp-route-songId="@Model.Id" asp-route-chordId="@chord.Id">@Resources.Domain.Common.Remove</a></li>
                }
            </ul>
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Resources.Domain.Common.NavVideos (<a asp-area="Admin" asp-controller="Videos" asp-action="CreateVideoForSong"
                       asp-route-songId="@Model.Id">@Resources.Domain.Common.Add</a>)
                </dt>
                <dd class="col-sm-10">
                    <ul>
                        @foreach (var video in Model.Videos)
                        {
                            <li><iframe width="560" height="315" src="https://www.youtube.com/embed/@video.YouTubeUrl"
                                        frameborder="0" allow="accelerometer; encrypted-media;
                                         gyroscope; picture-in-picture" allowfullscreen></iframe>
                                 <a asp-area="Admin" asp-action="Edit" asp-controller="Videos"
                                                     asp-route-id="@video.Id">@Resources.Domain.Common.Edit</a> / 
                                <a asp-area="Admin" asp-action="Delete" asp-controller="Videos"
                                   asp-route-songId="@Model.Id" asp-route-videoId="@video.Id">@Resources.Domain.Common.Delete</a></li>
                        }
                    </ul>
                </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">@Resources.Domain.Common.Edit</a> |
    <a asp-action="Index">@Resources.Domain.Common.BackToList</a>
</div>
