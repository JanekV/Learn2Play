@model BLL.App.DTO.SongWithEverything

<div asp-validation-summary="All" class="text-danger"></div>
<div class="form-group">
    <label asp-for="@Model.SongName" class="control-label">@Resources.Domain.Common.Name</label>
    <input asp-for="@Model.SongName" class="form-control" />
    <span asp-validation-for="@Model.SongName" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.SongAuthor" class="control-label">@Resources.Domain.Common.Author</label>
    <input asp-for="@Model.SongAuthor" class="form-control" />
    <span asp-validation-for="@Model.SongAuthor" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.SpotifyLink" class="control-label">@Resources.Domain.Common.SpotifyLink</label>
    <input asp-for="@Model.SpotifyLink" class="form-control" />
    <span asp-validation-for="@Model.SpotifyLink" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.SongDescription" class="control-label"></label>
    <textarea asp-for="@Model.SongDescription" class="form-control" placeholder="@Resources.Domain.Common.Description"></textarea>
    <span asp-validation-for="@Model.SongDescription" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.SongKeyId" class="control-label"></label>
    <select asp-for="@Model.SongKeyId" class ="form-control" asp-items="Model.SongKeySelectList"></select>
</div>
