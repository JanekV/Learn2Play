@model WebApp.Areas.Admin.ViewModels.SongWithInstrumentViewModel

@{
    ViewData["Title"] = "Add";}
}
<h1>Add</h1>

<h4>Song: @Model.SongName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-area="Admin" asp-action="AddToSong">
            <div class="form-group">
                <label asp-for="@Model.InstrumentId" class="control-label"></label>
                <select asp-for="@Model.InstrumentId" class ="form-control" asp-items="Model.InstrumentSelectList"></select>
            </div>
            <input type="hidden" asp-for="SongId" value="@Model.SongId"/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}