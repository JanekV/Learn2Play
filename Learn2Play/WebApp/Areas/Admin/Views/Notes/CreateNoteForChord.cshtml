@model WebApp.Areas.Admin.ViewModels.ChordWithNoteViewModel

@{
    ViewBag.Title = "Add note";
}

<h4>@Resources.Domain.Common.Note</h4>
<h6>@Resources.Domain.Common.Chord: @Model.ChordName</h6>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateForChord">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Note.Name" class="control-label">@Resources.Domain.Common.Name</label>
                <input asp-for="Note.Name" class="form-control" />
                <span asp-validation-for="Note.Name" class="text-danger"></span>
            </div>
            
            <input type="hidden" asp-for="ChordId" value="@Model.ChordId"/>
            
            <div class="form-group">
                <input type="submit" value="@Resources.Domain.Common.Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Resources.Domain.Common.BackToList</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
