@model IEnumerable<Domain.SongInFolder>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Folder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Song)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Folder.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Song.Author)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SongInFolderId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SongInFolderId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SongInFolderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
