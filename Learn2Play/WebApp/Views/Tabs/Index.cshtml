@model IEnumerable<Domain.Tab>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SongPart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StrummingPattern)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PicturePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Link)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Video)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SongPart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StrummingPattern)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PicturePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Video.AuthorChannelLink)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TabId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TabId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TabId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
