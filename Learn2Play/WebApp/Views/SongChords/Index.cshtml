@model IEnumerable<Domain.SongChord>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Song)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chord)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Song.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chord.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SongChordId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SongChordId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SongChordId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
